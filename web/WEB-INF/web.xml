<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>main.java.com.action.AdminServlet</servlet-class>
    </servlet>

    <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>YaoServlet</servlet-name>
    <servlet-class>main.java.com.action.YaoServlet</servlet-class>
    </servlet>

    <filter>
    <filter-name>HTMLFilter</filter-name>
    <filter-class>main.java.filter.HTMLFilter</filter-class>
    <init-param>
    <param-name>encoding</param-name>
    <param-value>UTF-8</param-value>
    </init-param>
    </filter>

    <filter-mapping>
    <filter-name>HTMLFilter</filter-name>
    <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/Admin.shtml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>YaoServlet</servlet-name>
    <url-pattern>/YaoServlet</url-pattern>
    </servlet-mapping>

</web-app>